<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6A48F"
    android:backgroundTint="#181818"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_vaso_foreground" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ED80A5"
        android:backgroundTint="#E8AEC2"
        android:backgroundTintMode="add"
        android:foregroundTint="#ECB1C5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d8000000"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="411dp"
                android:layout_height="232dp"
                android:background="#ECCFD9"
                android:src="@mipmap/promoplaces_foreground" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="#1C1C1B"
                android:backgroundTint="#181818"
                android:gravity="center_horizontal"
                android:text="@string/txt_menu"
                android:textColor="@color/write"
                android:textSize="28sp" />


            <ImageView
                android:id="@+id/imageButton_cupon"
                android:layout_width="441dp"
                android:layout_height="440dp"
                android:background="#F30B0A0A"
                android:src="@mipmap/botones" />

            <TextView
                android:id="@+id/txtmedio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#181818"
                android:gravity="center_vertical"
                android:textColor="@color/write"
                android:textSize="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <TextView
                android:id="@+id/txtul"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:gravity="center_vertical"
                android:textColor="@color/write"
                android:textSize="64dp" />

            <TextView
                android:id="@+id/txtul2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="@string/txt_redes"
                android:textColor="@color/write"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_wapp"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/whatsapp" />

                <ImageButton
                    android:id="@+id/imageButton_insta"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/instagram" />

                <ImageButton
                    android:id="@+id/btn_face"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/facebook" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtul3"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:foregroundTint="#FFFFFF"
                android:gravity="center_vertical"
                android:shadowColor="#E4FF5722"
                android:text="         4491511514            PromotionsAndPlaces              P%P"
                android:textColor="@color/write"
                android:textSize="12sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>