<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_vaso_foreground" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ED80A5"
        android:backgroundTint="#181818"
        android:backgroundTintMode="add"
        android:foregroundTint="#181818">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d8000000"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="411dp"
                android:layout_height="250dp"
                android:background="#F30B0A0A"
                android:src="@mipmap/promoplaces_foreground" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="#1C1C1B"
                android:backgroundTint="#181818"
                android:gravity="center_horizontal"
                android:text="@string/txt_menu"
                android:textColor="@color/write"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#181818"
                android:backgroundTint="#181818" />

            <TextView
                android:id="@+id/txtmedio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#181818"
                android:gravity="center_horizontal"
                android:textColor="@color/write"
                android:textSize="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button5"
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:background="#B5E91E63"
                    android:text="Ir al mapa" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:background="#B5E91E63"
                    android:text="Sitios" />

            </LinearLayout>

            <Button
                android:id="@+id/button8"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:background="#B5E91E63"
                android:text="Cupones" />

            <Button
                android:id="@+id/button6"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:background="#B5E91E63"
                android:text="Notificaciones" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="90"
                android:background="#B5E91E63"
                android:text="Perfil" />

            <TextView
                android:id="@+id/txtul"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:gravity="center_horizontal"
                android:textColor="@color/write"
                android:textSize="64dp" />

            <TextView
                android:id="@+id/txtul2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:text="@string/txt_redes"
                android:textColor="@color/write"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_wapp"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/whatsapp" />

                <ImageButton
                    android:id="@+id/imageButton_insta"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/instagram" />

                <ImageButton
                    android:id="@+id/btn_face"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/facebook" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtul3"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:foregroundTint="#FFFFFF"
                android:gravity="center_horizontal"
                android:shadowColor="#E4FF5722"
                android:text="4499997378                          P%P                               P%P"
                android:textColor="@color/write"
                android:textSize="12sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>