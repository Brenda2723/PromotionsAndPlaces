<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondoregistro" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF5722"
        android:backgroundTint="#FF5722"
        android:backgroundTintMode="add"
        android:foregroundTint="#FF5722">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF5722"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="373dp"
                android:layout_height="218dp"
                android:background="#FF5722"
                android:src="@drawable/pp" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="#FF5722"
                android:backgroundTint="#FF5722"
                android:gravity="center_horizontal"
                android:text="@string/txt_menu"
                android:textColor="@color/color_Black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#181818"
                android:backgroundTint="#FF5722"
                android:src="@drawable/menucomida" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="222dp"
                android:orientation="horizontal">


            </LinearLayout>



            <TextView
                android:id="@+id/txtul2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:text="@string/txt_redes"
                android:textColor="@color/write"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_wapp"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/whatsapp" />

                <ImageButton
                    android:id="@+id/imageButton_insta"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/instagram" />

                <ImageButton
                    android:id="@+id/btn_face"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/facebook" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtul3"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:foregroundTint="#FFFFFF"
                android:gravity="center_horizontal"
                android:shadowColor="#03A9F4"/>

            <TextView
                android:id="@+id/txtul4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/txt_galeria"
                android:textColor="@color/write"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/galeria1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:src="@drawable/galeria2" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:src="@drawable/galeria3" />
            </LinearLayout>





        </LinearLayout>
    </ScrollView>


</RelativeLayout>